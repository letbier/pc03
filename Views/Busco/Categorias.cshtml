@model List<Categoria>


<h1>Lista de regiones</h1>

<table class="table border">
    <tr>
        <th>Id</th>
        <th>Nombres</th>
        
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Nombre</td>
            <td>
        </tr>
    }
    @if (Model.Count == 0) {
        <tr>
            <td colspan="4" class="text-center">No se encontraron regiones</td>
        </tr>
    }
</table>

