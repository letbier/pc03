@model List<Cliente>

<h1>Lista de Pedidos</h1>

<table class="table border">
    <tr>
        <th>Id</th>
        <th>Nombre del Producto</th>
        <th>Foto</th>
        <th>Descripcion</th>
        <th>Precio</th>
        <th>Celular</th>
        <th>Lugar</th>
        <th>Nombre del Cliente</th>
        <th>Categoria</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.NombreProducto</td>
            <td>@item.Foto</td>
            <td>@item.Descripcion</td>
            <td>@item.Precio</td>
            <td>@item.Celular</td>
            <td>@item.Lugar</td>
            <td>@item.NombreCliente</td>
            <td>
                @item.Categoria.Nombre
            </td>
           
        </tr>
    }
    @if (Model.Count == 0) {
        <tr>
            <td colspan="4" class="text-center">No se encontraron Pedidos</td>
        </tr>
    }
</table>

<a href="/busco/registrarpedido" class="btn btn-primary">Añadir Nuevo Pedido</a>